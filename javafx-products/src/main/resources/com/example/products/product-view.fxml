<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.products.ProductController">
    <center>
        <GridPane hgap="10" vgap="10" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints percentWidth="30"/>
                <ColumnConstraints percentWidth="70"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="ALWAYS"/>
                <RowConstraints vgrow="NEVER"/>
            </rowConstraints>

            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>

            <!-- Form -->
            <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="nameField" promptText="Ex: Clavier" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Prix:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="priceField" promptText="Ex: 199.99" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <!-- Buttons -->
            <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <Button text="Ajouter" onAction="#onAdd" styleClass="primary"/>
                <Button text="Modifier" onAction="#onUpdate"/>
                <Button text="Supprimer" onAction="#onDelete" styleClass="danger"/>
                <Button text="Vider" onAction="#onClear"/>
            </HBox>

            <!-- List -->
            <ListView fx:id="productList" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2" />

        </GridPane>
    </center>

    <bottom>
        <HBox styleClass="status-bar">
            <Label text="Statut:"/>
            <Label fx:id="statusLabel" text="PrÃªt." />
        </HBox>
    </bottom>
</BorderPane>
